<header class="page-header">
  <h1>Login</h1>
</header>


<div class="row">
  <div class="col-sm-6 ">
    <%= form_tag '/login' do %>    

      <div class="form-group">
        <h4><b>Email</b></h4>
        <%= email_field_tag :email %>
      <div>

      <div class="form-group">
        <h4><b>Password</b></h4>
        <%= password_field_tag :password %>
      <div>

      <br>
    
 
      <%= submit_tag "Login" %>
  

    <% end %>

  </div>
</div>