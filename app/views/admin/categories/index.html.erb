<section class="admin-categories-index">
  
  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default categories">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2"><h3>Category</h3></th>
          <th colspan="2"><h3>Created At</h3></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <th colspan="2"><%= category.name %></th>
            <th><%= category.created_at %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
  
  </div>



</section>